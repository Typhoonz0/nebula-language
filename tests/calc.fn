// calc is short for calculator

while (True) {
    one = input("First Number: ")
    op = input("Operation (+, -, *, /): ")
    two = input("Second Number: ")
    
    if (op == "+") {
        global result
        result = one + two
    } elif (op == "-") {
        global result
        result = one - two
    } elif (op == "*") {
        global result
        result = one * two
    } elif (op == "/") {
        global result
        try {
            result = one / two
        } catch {
            print("Cannot divide by 0.")
        }
    } else {
        print("Enter a valid operator.")
    }
    print(result)
}